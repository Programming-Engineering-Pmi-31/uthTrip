@model UthTripProject.Models.ReviewViewModel
@{
    ViewBag.Title = "Write review";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <head>
        <meta charset="utf-8">
        <title>site</title>
        <link rel="stylesheet" href="css\createTrip.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        <section id="nav-bar">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="#">
                    <img src="~/Views/photoes/logo2.png" width="30" height="30" alt="">
                </a>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <p>@Session["Username"]</p>
                        </li>
                        <li class="nav-item">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <a class="nav-link" href="/Home/StartPage">
                                Головна
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/MyTrips">
                                Мої подорожі
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="">
                                Створити
                            </a>
                            <span class="sr-only">(current)</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Logout">
                                Вийти
                            </a>

                        </li>
                    </ul>
                </div>
            </nav>
        </section>

        <div class="container ">
            <canvas class="background"></canvas>

            <div class="card bg-light ">
                <article class="card-body mx-auto" style="max-width: 600px;">
                    <h4 class="card-title mt-3 text-center">Написати відгук</h4>
                    <form>
                        <div class="form-group">
                            <div>
                                <label class="label-warning">@ViewBag.DuplicateMessage</label>
                            </div>
                        </div>
                        <div class="form-group ">
                            @Html.LabelFor(model => model.Review1, htmlAttributes: new { @class = " input-group" })
                            <div class="input-group-prepend">
                                @Html.EditorFor(model => model.Review1, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                @Html.ValidationMessageFor(model => model.Review1, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Mark, htmlAttributes: new { @class = " input-group" })
                            <div class="input-group-prepend">
                                @Html.EditorFor(model => model.Mark, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "1", @max="10",@step = "1", @value = "10" } })
                                @Html.ValidationMessageFor(model => model.Mark, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Надіслати </button>
                        </div>
                        <div class="form-group">
                            <div>
                                <label class="label-success">@ViewBag.SuccessMessage</label>
                            </div>
                        </div>

                        @*  <p class="text-center">@Html.ActionLink("Come back to all trips ", "../Home/StartPage")</p>*@
                    </form>
                </article>
            </div>

        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>


    </body>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/background")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/createTrip.css")
    @Styles.Render("~/Content/css")
}
