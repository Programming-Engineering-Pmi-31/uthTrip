            <a class="navbar-brand" href="#">
                <img src="~/Views/photoes/logo2.png" width="30" height="30" alt="">
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <a class="nav-link" href="/Home/StartPage">MAIN PAGE</a>
                    </li>
                    <li class="nav-item">
