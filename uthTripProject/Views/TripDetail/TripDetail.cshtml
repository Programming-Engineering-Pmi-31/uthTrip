        <div class="card bg-light ">
            <article class="card-body mx-auto" style="max-width: 600px;">
                <h4 class="card-title mt-3 text-center">@Html.DisplayFor(modelItem => modelItem.Trip_Title)</h4>

                <div class="row">
                    <div class="col-md-8">
                        @Html.DisplayFor(modelItem => modelItem.Description)
                    </div>
                    <img src="C:\Users\Andriy\Documents\uthTrip\uthTripProject\Views\photoes\logo2.jfif" width="30" height="30" alt="">
                    <div class="col-md-8">
                        <h2>@Html.DisplayFor(modelItem => modelItem.Price) ₴ </h2>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(modelItem => modelItem.Start_date)
                        <br>
                        @Html.DisplayFor(modelItem => modelItem.End_date)
                    </div>
                    <div class="col-md-8">
                        <h2>@Html.DisplayFor(modelItem => modelItem.Country) </h2>
                    </div>
                    <div class="col-md-8">
                        <h2>@Html.DisplayFor(modelItem => modelItem.City) </h2>
                    </div>
                </div>
                </article>
</div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>

    </body>

}

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
