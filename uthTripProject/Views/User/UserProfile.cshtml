@model UthTrip.BLL.DTO.UserDTO
@{
    ViewBag.Title = "UserProfile";
}

<head>
    <meta charset="utf-8">
    <title>site</title>
    <link rel="stylesheet" href="css\createTrip.css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <section id="nav-bar">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#">
                <img src="~/Views/photoes/logo2.png" width="30" height="30" alt="">
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <p>@Session["Username"]</p>
                    </li>
                    <li class="nav-item">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <a class="nav-link" href="/Home/StartPage">
                            Головна
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MyTrips">
                            Мої подорожі
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Trip/Create">
                            Створити
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </section>
    <div class="container ">
        <canvas class="background"></canvas>
        <div>
            <hr />
            <dl class="dl-horizontal">

                <dt>
                    <p>Ім'я: </p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.First_Name)
                </dd>

                <dt>
                    <p>Прізвище: </p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Last_Name)
                </dd>

                <dt>
                    <p>Пошта: </p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    <p>Юзернейм: </p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Username)
                </dd>

                <dt>
                    <p>Дата народження: </p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Birthday)
                </dd>

                <dt>
                    <p>Інформація: </p>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Info)
                </dd>

            </dl>
            @if (ViewBag.Reviews != null)
            {
                <p>Відгуки на подорожі, створені користувачем:</p>
                foreach (var review in ViewBag.Reviews)
                {
                    <li>@review</li>
                }
            }

        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/background")
        @Scripts.Render("~/bundles/bootstrap")
        @Styles.Render("~/Content/tripDetail.css")
        @Styles.Render("~/Content/css")
    }

